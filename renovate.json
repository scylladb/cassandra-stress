{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "enabledManagers": [
    "maven",
    "dockerfile",
    "custom.regex",
    "github-actions"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "maven",
      "managerFilePatterns": [
        "/(^|/)build\\.xml$/"
      ],
      "depNameTemplate": "com.scylladb:scylla-driver-core",
      "matchStrings": [
        "<property name=\"base.javaDriverVersion\" value=\"(?<currentValue>[\\w+\\.\\-]*)\""
      ]
    }
  ]
}
